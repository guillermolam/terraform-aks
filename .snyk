# Snyk policy file to exclude directories/files from import and CLI tests
---
version: v1
exclude:
  global:
    # Skip built Terraform state directories
    - "workspaces/terraform.tfstate.d/**"
    # Skip integration and e2e test code
    - "tests/e2e/**"
    # Skip provider configs and modules you don't ship
    - "providers.tf"
    # Exclude every directory whose name starts with a dot
    - "**/.*"
    # Re-include .github so it's scanned
    - "!**/.github/**"
